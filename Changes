.language {
  list-style: none; /* Remove default list styling */
  padding: 0;
  margin: 0;
  display: inline-block; /* Display the list horizontally */
  border: 1px solid #ccc; /* Add a border */
  border-radius: 5px; /* Round the corners */
  overflow: hidden; /* Hide overflow from border */
}

.language li {
  display: inline-block; /* Display list items horizontally */
}

.language li a {
  display: block; /* Make the anchor fill the list item */
  padding: 8px 12px; /* Add padding for spacing */
  text-decoration: none; /* Remove underlines from links */
  color: #333; /* Default text color */
  font-size: 14px; /* Adjust font size as needed */
}

.language li a.active,
.language li.active a { /* Apply active style to link or li */
  background-color: #4CAF50; /* Green background for active */
  color: white; /* White text for active */
}

.language li a:hover {
  background-color: #f0f0f0; /* Light gray on hover */
}
